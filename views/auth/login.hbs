<div>

  <h3>Login please</h3>
  <form action="/login" method="POST">

    <label>
      Username
      <input type="text" name="username" placeholder="ironhacker" />
    </label>

    <label>Password
      <input type="password" name="password" placeholder="********" />
    </label>

    <button type="submit">Login</button>

  </form>

  {{#if errorMessage}}
    <p>There was a problem: {{errorMessage}}</p>
  {{/if}}
</div>